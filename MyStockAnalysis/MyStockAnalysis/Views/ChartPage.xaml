<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Stock Analysis"
             xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             x:Class="MyStockAnalysis.ChartPage">

    <AbsoluteLayout HorizontalOptions="FillAndExpand">
        <forms:ChartView Margin="10,0,10,0" HeightRequest="190" AbsoluteLayout.LayoutBounds=".5,20,1,190" AbsoluteLayout.LayoutFlags="XProportional,WidthProportional" BackgroundColor="Transparent"  Chart="{Binding DistanceChart}" />
        <forms:ChartView Margin="10,0,10,0" HeightRequest="190" AbsoluteLayout.LayoutBounds=".5,20,1,190" AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"  BackgroundColor="Transparent"  Chart="{Binding DistanceChart}" />
    </AbsoluteLayout>

</ContentPage>